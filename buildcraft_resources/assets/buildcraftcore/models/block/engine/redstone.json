{
    "textures": {
        "#trunk_blue":"buildcraftcore:blocks/engine/trunk_blue",
        "#trunk_green":"buildcraftcore:blocks/engine/trunk_green",
        "#trunk_yellow":"buildcraftcore:blocks/engine/trunk_yellow",
        "#trunk_red":"buildcraftcore:blocks/engine/trunk_red",
        "#trunk_overheat":"buildcraftcore:blocks/engine/trunk_overheat",

        "#chamber":"buildcraftcore:blocks/engine/chamber_base",
        "#back":"buildcraftcore:blocks/engine/wood/back",
        "#side":"buildcraftcore:blocks/engine/wood/side"
    },
    "shade":true,
    "variables": {
        "progress_size": "(progress > 0.5 ? ((1 - progress) * (8 * 2 - 0.01)) : (progress * (8 * 2 - 0.01)))",
        "trunk_tex": "'#trunk_' + stage"
    },
    "rules": [
        {
            "when": "facing != 'up'",
            "do": {
                "type": "builtin/rotate",
                "from": "'up'",
                "to": "facing"
            }
        }
    ],
    "elements": [
        {
            "name":"base",
            "from": [ 0, 0, 0 ],
            "to": [ 16, 4, 16 ],
            "faces": {
                "down":  { "uv": [ 0, 16, 0, 16 ], "texture": "'#back'" },
                "up":    { "uv": [ 0, 16, 0, 16 ], "texture": "'#back'" },
                "north": { "uv": [ 0, 16, 0, 4 ], "texture": "'#side'" },
                "south": { "uv": [ 0, 16, 0, 4 ], "texture": "'#side'" },
                "west":  { "uv": [ 0, 16, 0, 4 ], "texture": "'#side'"},
                "east":  { "uv": [ 0, 16, 0, 4 ], "texture": "'#side'" }
            }
        },
        {
            "name":"base_moving",
            "from": [ 0, "4 + progress_size", 0 ],
            "to": [ 16,  "8 + progress_size", 16 ],
            "faces": {
                "down":  { "uv": [ 0, 16, 0, 16 ], "texture": "'#back'" },
                "up":    { "uv": [ 0, 16, 0, 16 ], "texture": "'#back'" },
                "north": { "uv": [ 0, 16, 0, 4 ], "texture": "'#side'" },
                "south": { "uv": [ 0, 16, 0, 4 ], "texture": "'#side'" },
                "west":  { "uv": [ 0, 16, 0, 4 ], "texture": "'#side'"},
                "east":  { "uv": [ 0, 16, 0, 4 ], "texture": "'#side'" }
            }
        },
        {
            "name":"trunk",
            "from": [ 4, 4, 4 ],
            "to": [ 12, 16, 12],
            "light_comment": "these look nice, but idk if this will stay. Also some of the wrong parts of the texture light up atm (we only want the coloured bits to light up, but the black bits light up as well)",
            "light":"(stage == 'overheat' || stage == 'red') ? 10 : stage == 'yellow' ? 7 : stage == 'green' ?  4 : 0",
            "faces": {
                "down":  { "uv": [ 0, 8, 0, 8 ], "texture": "trunk_tex" },
                "up":    { "uv": [ 0, 8, 0, 8 ], "texture": "trunk_tex" },
                "north": { "uv": [ 8, 16, 0, 12 ], "texture": "trunk_tex" },
                "south": { "uv": [ 8, 16, 0, 12 ], "texture": "trunk_tex" },
                "west":  { "uv": [ 8, 16, 0, 12 ], "texture": "trunk_tex"},
                "east":  { "uv": [ 8, 16, 0, 12 ], "texture": "trunk_tex" }
            }
        },
        {
            "name":"chamber",
            "from": [ 3, 4, 3 ],
            "to": [ 13, "4 + progress_size", 13 ],
            "faces": {
                "north": { "uv": [ 3, 13, "progress_size", 0 ], "texture": "'#chamber'" },
                "south": { "uv": [ 3, 13, "progress_size", 0 ], "texture": "'#chamber'" },
                "west":  { "uv": [ 3, 13, "progress_size", 0 ], "texture": "'#chamber'" },
                "east":  { "uv": [ 3, 13, "progress_size", 0 ], "texture": "'#chamber'" }
            }
        }
    ]
}